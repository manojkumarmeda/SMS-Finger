@model SmsFinger.Models.accout

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_MasterLayout.cshtml";
}

<div class="container-fluid">
    <div class="block-header">
        <h2>
            Account Management
        </h2>
    </div>
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Account Update</h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li>@Html.ActionLink("Users List", "Index")</li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <form id="form_validation" method="POST" novalidate="novalidate">
                        <div class="">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.acname, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.LabelFor(model => model.acname, htmlAttributes: new { @class = "form-label" })
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.mpoc, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.LabelFor(model => model.mpoc, htmlAttributes: new { @class = "form-label" })
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.mobileno, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.LabelFor(model => model.mobileno, htmlAttributes: new { @class = "form-label" })
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "form-label" })
                                </div>
                            </div>
                            @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "form-label", @id = "ddlaccount" })
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.DropDownList("SelectedItem", (IEnumerable<SelectListItem>)ViewData["ListItems"], new { @class = "form-control show-tick" })
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.remarks, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                    @Html.LabelFor(model => model.remarks, htmlAttributes: new { @class = "form-label" })
                                </div>
                            </div>
                            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-primary waves-effect" })
                            <input type="submit" value="Save" class="btn btn-primary waves-effect" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
